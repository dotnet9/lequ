@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model List<Link>

@{
    ViewData["Title"] = Localizer["Title"];
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<a href="/Link/Create/" class="btn btn-primary">
    <i class="fas fa-plus-square"></i>@Localizer["Create"]
</a>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Localizer["Title"]</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
            <tr>
                <th style="width: 1%">@Localizer["ID"]</th>
                <th style="width: 5%">@Localizer["Name"]</th>
                <th style="width: 2%">@Localizer["Index"]</th>
                <th style="width: 5%">@Localizer["Url"]</th>
                <th style="width: 20%">@Localizer["Description"]</th>
                <th style="width: 1%"></th>
                <th style="width: 1%"></th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <th>
                            <a href="@item.Url">@item.Name</a>
                            <br/>
                            <small>
                                Created @item.CreateDate
                            </small>
                        </th>
                        <td>@item.Index</td>
                        <td>@item.Url</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt"></i>@Localizer["Update"]
                            </a>
                        </td>
                        <td>
                            <form asp-route-id="@item.ID" asp-action="Delete" method="post">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>@Localizer["Delete"]
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>