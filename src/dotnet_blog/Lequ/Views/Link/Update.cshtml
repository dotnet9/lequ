@model Lequ.ViewModels.UpdateLinkViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form class="form-group" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="4" cols="20" asp-for="Description" class="form-control" ></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Index"></label>
        <input asp-for="Index" class="form-control" />
        <span asp-validation-for="Index" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <br />
        @if (Model?.Statuses != null)
        {
            @foreach (var item in Model.Statuses)
            {
                <input type="radio" asp-for="StatusEnum" value="@((int)item)" checked='@(Model.StatusEnum == item)' />
                @item.ToString()
            }
            <span asp-validation-for="StatusEnum" class="text-danger"></span>
        }
        <br />
    </div>
    <button type="submit" class="btn btn-info">Save</button>
</form>