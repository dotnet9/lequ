@model List<Lequ.Models.Blog>
<div class="site-section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout-2">
            <div class="col-md-4">
                <a href="/Blog/Details?id=@Model?[0].ID" class="h-entry mb-30 v-height gradient" style="background-image: url('@Model?[0].Cover');">

                    <div class="text">
                        <div class="post-categories mb-3">
                            <span class="post-category bg-danger">WPF</span>
                        </div>
                        <h2>@Model?[0].Title</h2>
                        <span class="date">@Model?[0].CreateDate</span>
                    </div>
                </a>
