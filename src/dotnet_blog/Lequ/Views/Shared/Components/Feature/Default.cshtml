@model List<Lequ.Models.Blog>

<div class="site-section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout-2">
            <div id="banner" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    @if (Model != null)
                    {
                        for (var i = 0; i < Model.Count; i++)
                        {
                            <li data-target="#banner" data-slide-to="@i" class=@(i == 0 ? "active" : "")></li>
                        }
                    }
                </ul>
                <div class="carousel-inner">
                    @if (Model != null)
                    {
                        for (var i = 0; i < Model.Count; i++)
                        {
                            <div class='carousel-item @(i == 0 ? "active" : "")' data-interval="3000">
                                <img src="@Model[i].Cover">
                                <div class="carousel-caption d-none d-md-block">
                                    <h2><a href="/Blog/Details?id=@Model?[i].ID" target='_blank' style="color: white;">@Model?[i].Title</a></h2>
                                    <span class="date">@Model?[i].CreateDate</span>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#banner" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#banner" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>

            </div>
        </div>
    </div>
</div>