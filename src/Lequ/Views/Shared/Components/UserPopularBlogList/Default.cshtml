@model IEnumerable<Lequ.Model.Models.Blog>

<div class="sidebar-box">
    <h3 class="heading">Popular Posts</h3>
    <div class="post-entry-sidebar">
        <ul>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Blog/Details/@item.ID">
                            <img src="@item.Image" alt="Image placeholder" class="mr-4">
                            <div class="text">
                                <h4>@item.Title</h4>
                                <div class="post-meta">
                                    <span class="mr-2">@(((DateTime)(item.CreateDate??DateTime.Now)).ToString("yyyy-MM-dd HH:mm:ss"))</span>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
</div>