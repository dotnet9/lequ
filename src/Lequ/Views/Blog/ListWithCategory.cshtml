<div class="site-section">
    <div class="container">
        <div id="UserReviewsList" class="row">
        </div>
        <div class="row text-center pt-5 border-top">
            <div class="col-md-12">
                <button id="loadMore" class="btn btn-outline-primary" data-loading-text="Loading..." onclick="loadmore()">Click load more</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var page = 0;
    var _inCallback = false;

    function loadmore() {
        if (page <= -1 || _inCallback) {
            return;
        }

        _inCallback = true;
        page++;

        $('#loadMore').button("loading");
        $.get("/Blog/ListWithCategoryLoadMore?page=" + page, function (data) {
            if (data != '') {
                $("#UserReviewsList").append(data);
                $('#loadMore').button("reset");
            }
            else {
                page = -1;
                $('#loadMore').prop('class', 'btn btn-outline-secondary');
                $('#loadMore').html('No more data!');
            }

            _inCallback = false;
        });
    }
    window.onload = function() {
        loadmore();
    };

</script>
