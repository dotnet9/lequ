@using Lequ.Blog.Model.ViewModels
@model IEnumerable<BlogDto>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Tickets</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Title </th>
                                <th> Categories </th>
                                <th> Last Update </th>
                                <th> Control </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ThumbnailImage" class="mr-2" alt="image"> 
                                        </td>
                                        <td>@item.Title</td>
                                        <td>
                                            @if (item.Categories != null)
                                            {
                                                @foreach (var category in item.Categories)
                                                {
                                                    <a href="#" class="btn btn-info"><i class="fas fa-eye"></i> @category?.Name</a>
                                                }
                                            }
                                        </td>
                                        <td> @(((DateTime)(item.CreateDate??DateTime.Now)).ToString("yyyy-MM-dd HH:mm:ss")) </td>
                                        <td><a href="/Blog/ReadAll/@item.ID" class="btn btn-dark">Read all</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>